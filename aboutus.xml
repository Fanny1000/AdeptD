<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#3DA7FA"
    tools:context=".AboutUs">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="10dp" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="0dp">
            <ImageView
                android:id="@+id/icono"
                android:layout_width="411dp"
                android:layout_height="90dp"
                android:background="#FFF"
                app:srcCompat="@drawable/icono" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="0dp">


            <TextView
                android:id="@+id/niveles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/Niveles"
                android:textColor="#000"
                android:textSize="25sp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="a1"
                    android:background="@drawable/linearlayout_fondo"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iconoA1"
                        android:layout_width="wrap_content"
                        android:layout_height="90dp"
                        android:padding="5dp"
                        app:srcCompat="@drawable/a1" />

                    <TextView
                        android:id="@+id/nivel1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/Level1"
                        android:textColor="#000"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/freshman"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <Space
                    android:layout_width="10dp"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="a2"
                    android:background="@drawable/linearlayout_fondo"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iconoA2"
                        android:layout_width="wrap_content"
                        android:layout_height="90dp"
                        android:padding="5dp"
                        app:srcCompat="@drawable/a2" />

                    <TextView
                        android:id="@+id/nivel2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/Level2"
                        android:textColor="#000"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/sophomore"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>


            <TextView
                android:id="@+id/a1ya2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textColor="#000"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="b1"
                    android:background="@drawable/linearlayout_fondo"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iconoB1"
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:padding="5dp"
                        app:srcCompat="@drawable/b1" />

                    <TextView
                        android:id="@+id/nivel3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/Level3"
                        android:textColor="#000"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/Junior"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <!--  <Space
                      android:layout_width="10dp"
                      android:layout_height="match_parent" />

                   <LinearLayout
                       android:layout_width="0dp"
                       android:layout_height="match_parent"
                       android:layout_weight="1"
                       android:background="@drawable/linearlayout_fondo"
                       android:orientation="vertical">

                       <ImageView
                           android:id="@+id/iconoB2"
                           android:layout_width="match_parent"
                           android:layout_height="90dp"
                           android:padding="5dp"
                           app:srcCompat="@drawable/b2" />

                       <TextView
                           android:id="@+id/nivel4"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:gravity="center"
                           android:text="@string/Level4"
                           android:textColor="#000"
                           android:textSize="20sp"
                           android:textStyle="bold" />

                       <TextView
                           android:id="@+id/senior"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content" />
                   </LinearLayout> -->

             </LinearLayout>

             <TextView
                 android:id="@+id/b1yb2"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:padding="5dp"
                 android:textColor="#000"
                 android:textSize="20sp" />

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:orientation="horizontal">


                 <LinearLayout
                     android:layout_width="0dp"
                     android:layout_height="match_parent"
                     android:layout_weight="1"
                     android:background="@drawable/layout1"
                     android:orientation="vertical">

                     <TextView
                         android:id="@+id/otros_servicios"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:background="@drawable/encbezados"
                         android:gravity="center"
                         android:text="@string/otros"
                         android:textColor="#000"
                         android:textSize="20sp"
                         android:textStyle="bold" />

                     <TextView
                         android:id="@+id/servicios"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:textColor="#000"
                         android:textSize="15sp"
                         android:text="@string/otrosS" />
                 </LinearLayout>


             </LinearLayout>

             <TextView
                 android:id="@+id/conclu"
                 android:textColor="#000"
                 android:textSize="15sp"
                 android:padding="10dp"
                 android:text="@string/AboutConclu"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content" />
         </LinearLayout>


             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:gravity="end"
                 android:background="#E3C5FD"
                 android:paddingEnd="10dp"
                 android:orientation="horizontal"
                 android:layout_gravity="bottom"
                 android:paddingBottom="5dp"
                 android:paddingRight="10dp">

                 <TextView
                     android:id="@+id/contacto"
                     android:layout_width="168dp"
                     android:layout_height="wrap_content"
                     android:paddingLeft="10dp"
                     android:text="@string/contact"
                     android:textColor="#000"
                     android:layout_gravity="center"
                     android:textSize="25sp"
                     android:textStyle="bold" />

                 <ImageButton
                     android:id="@+id/FBboton"
                     android:layout_width="58dp"
                     android:layout_height="60dp"
                     android:background="@drawable/ic_launcher_foreground"
                     android:onClick="FB"
                     android:padding="7dp"
                     android:scaleType="fitCenter"
                     app:srcCompat="@drawable/fb" />

                 <Space
                     android:layout_width="10dp"
                     android:layout_height="30dp" />

                 <ImageButton
                     android:id="@+id/WAboton"
                     android:layout_width="61dp"
                     android:layout_height="match_parent"
                     android:background="@drawable/ic_launcher_foreground"
                     android:onClick="llamar"
                     android:padding="10dp"
                     android:scaleType="fitCenter"
                     app:srcCompat="@drawable/telefono" />

                 <Space
                     android:layout_width="10dp"
                     android:layout_height="30dp" />

                 <ImageButton
                     android:id="@+id/telefonoBoton"
                     android:layout_width="50dp"
                     android:layout_height="60dp"
                     android:background="@drawable/ic_launcher_foreground"
                     android:scaleType="fitCenter"
                     android:onClick="WA"
                     app:srcCompat="@drawable/wa" />
             </LinearLayout>

         </LinearLayout>
     </ScrollView>




 </android.support.constraint.ConstraintLayout>