<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".notes">

    <ScrollView
        android:layout_width="match_parent"
        android:background="#3DA7FA"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="0dp">

            <ImageView
                android:id="@+id/icono"
                android:layout_width="411dp"
                android:layout_height="90dp"
                android:background="#FFF"
                android:contentDescription="@string/titulo_notas"
                android:scaleType="fitCenter"
                android:visibility="visible"
                app:srcCompat="@drawable/icono" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10dp"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="0dp">


                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="@string/titulo_notas"
                    android:textAllCaps="false"
                    android:textColor="#000"
                    android:textSize="30sp"
                    android:textStyle="bold|italic" />

                <EditText
                    android:id="@+id/editText2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:textColorHint="#FFF"
                    android:textColor="#FFF"
                    android:inputType="textPersonName"
                    android:hint="Title of your note" />

                <EditText
                    android:id="@+id/editText"
                    android:layout_width="match_parent"
                    android:layout_height="415dp"
                    android:background="@drawable/bfondo"
                    android:ems="10"
                    android:padding="10dp"
                    android:gravity="top"
                    android:inputType="textMultiLine"
                    android:textColor="#000"
                    android:textSize="25sp"
                    android:typeface="serif" />
                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="10dp" />

                <Button
                    android:id="@+id/save_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:background="@drawable/botonabout"
                    android:textStyle="bold"
                    android:text="@string/boton_guardar" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="10dp" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:onClick="Ynotes"
                    android:background="@drawable/botonenter"
                    android:text="@string/boton_ver" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>