<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SignIn"
    android:background="#832194">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:background="@drawable/layout1"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/sign_in"
            android:textColor="#000"
            android:padding="5dp"
            android:textSize="25sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Name"
            android:padding="5dp"
            android:textColor="#000"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/NameTexto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/NameEx"
            android:inputType="textPersonName"
            android:textColorHint="#837E7E"
            android:textColor="#000"
            android:textSize="24sp"
            android:paddingLeft="50dp"
            android:paddingStart="50dp" />

        <TextView
            android:id="@+id/apellido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Apellido"
            android:padding="5dp"
            android:textColor="#000"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/apellidoTexto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/ApellidoEx"
            android:inputType="textPersonName"
            android:textColorHint="#837E7E"
            android:textColor="#000"
            android:textSize="24sp"
            android:paddingLeft="50dp"
            android:paddingStart="50dp"/>

        <TextView
            android:id="@+id/usuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Usuario"
            android:padding="5dp"
            android:textColor="#000"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/usuarioTexto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/UsuarioEx"
            android:inputType="textPersonName"
            android:textColorHint="#837E7E"
            android:textColor="#000"
            android:textSize="24sp"
            android:paddingLeft="50dp"
            android:paddingStart="50dp" />

        <TextView
            android:id="@+id/telefono"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Tel"
            android:padding="10dp"
            android:textColor="#000"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/telefonoTexto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/TelEx"
            android:inputType="phone"
            android:textColorHint="#837E7E"
            android:textSize="24sp"
            android:textColor="#000"
            android:paddingLeft="50dp"
            android:paddingStart="50dp"/>
        <TextView
            android:id="@+id/nivel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Nivel"
            android:padding="5dp"
            android:textColor="#000"
            android:textSize="24sp" />

        <RadioGroup
            android:id="@+id/nivelTexto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:outlineSpotShadowColor="@color/colorAccent">

            <RadioButton
                android:id="@+id/A1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:focusable="auto"
                android:padding="5dp"
                android:shadowColor="@android:color/darker_gray"
                android:text="@string/Level1"
                android:textColor="#000"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/A2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:focusable="auto"
                android:padding="5dp"
                android:text="@string/Level2"
                android:textColor="#000"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/B1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#000"
                android:textSize="20sp"
                android:padding="5dp"
                android:text="@string/Level3" />
            <RadioButton
                android:id="@+id/B2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#000"
                android:textSize="20sp"
                android:padding="5dp"
                android:text="@string/Level4" />
        </RadioGroup>

        <TextView
            android:id="@+id/newpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/password2"
            android:padding="10dp"
            android:textColor="#000"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/contraseÃ±a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ems="10"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:textColor="#000"
            android:textColorHint="#837E7E"
            android:textSize="24sp"
            android:paddingLeft="50dp"
            android:paddingStart="50dp" />

        <TextView
            android:id="@+id/correo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Correo"
            android:padding="5dp"
            android:textColor="#000"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/CorreoTexto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="40"
            android:hint="@string/CorreoEx"
            android:inputType="textPersonName"
            android:textColor="#000"
            android:textColorHint="#837E7E"
            android:textSize="24sp"
            android:paddingLeft="50dp"
            android:paddingStart="50dp" />
        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <Button
            android:id="@+id/signin"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/botonenter"
            android:textColor="#000"
            android:textStyle="bold"
            android:onClick="onClick"
            android:text="@string/sign_in" />

    </LinearLayout>



</android.support.constraint.ConstraintLayout>
</ScrollView>